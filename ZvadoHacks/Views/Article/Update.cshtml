@{ 
    var article = ViewData["article"] as Article;
}

@*ToDo Article Update View: Style the inputs and form*@

<form asp-action="Update" asp-route-id="@article.Id.ToString()" enctype="multipart/form-data">
    <img id="imagePreview" src="/Images/ArticlePreview/@article.Image.Id.ToString()" alt="image preview" />
    <input id="imageInput" type="file" multiple="multiple" name="Image" />
    <span>Heading</span>
    <input class="input-form" type="text" multiple="multiple" name="Heading" value="@article.Heading"/>
    <span>Author</span>
    <input class="input-form" type="text" multiple="multiple" name="Author" value="@article.Author"/>
    <span>Content</span>
    <textarea type="text" multiple="multiple" name="Content">@article.Content</textarea>
    <input class="btn my-button" type="submit" />
</form>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#imagePreview').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#imageInput").change(function () {
        readURL(this);
    });
</script>