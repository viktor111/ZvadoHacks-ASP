@model UserProfileModel

<form asp-action="Profile" method="post" enctype="multipart/form-data">

    <img id="imagePreview" src="/Images/Thumbnail/@Model.ImageId" alt="image preview" />
    <input id="imageInput" type="file" multiple="multiple" name="Image" />

    @Html.ValidationMessageFor(m => m.Username)
    <input name="Username" type="text" value="@Model.Username" />

    @Html.ValidationMessageFor(m => m.Email)
    <input name="Email" type="email" value="@Model.Email" />


    <input type="submit" />
</form>
<a asp-action="Password" asp-route-id="@Model.Id">Change pwd</a>
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#imagePreview').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#imageInput").change(function () {
        readURL(this);
    });
</script>